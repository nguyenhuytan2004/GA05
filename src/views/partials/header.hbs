                    <i
                        :class="open ? 'fas fa-chevron-up text-xs ml-2' : 'fas fa-chevron-down text-xs ml-2'"
                    ></i>
                </span>
            </a>
            <ul
                class="mobile-dropdown-menu"
                x-show="open"
                x-transition
                class="space-y-2"
            >
                <li><a
                        href="shop"
                        class="hover:text-secondary font-bold block pt-2 pb-3"
                    >Shop Men</a></li>
                <li><a
                        href="single-product-page"
                        class="hover:text-secondary font-bold block py-2"
                    >Men item 1</a></li>
                <li><a
                        href="single-product-page"
                        class="hover:text-secondary font-bold block py-2"
                    >Men item 2</a></li>
                <li><a
                        href="single-product-page"
                        class="hover:text-secondary font-bold block py-2"
                    >Men item 3</a></li>
            </ul>
        </li>

        <!-- Women Dropdown -->
